{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2019", "esnext.asynciterable", "es2020.string"],
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "../shared/**/*",
    "../extension/src/api/authApi.ts",
    "../extension/src/api/copilotApi.ts",
    "../extension/src/api/invitationApi.ts",
    "../extension/src/api/loggerApi.ts",
    "../extension/src/api/organizationApi.ts",
    "../extension/src/api/projectApi.ts",
    "../extension/src/api/replyApi.ts",
    "../extension/src/api/threadApi.ts"
  ]
}

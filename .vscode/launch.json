// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/extension"],
      "outFiles": ["${workspaceFolder}/extension/dist/**/*.js"],
      // "preLaunchTask": "npm: watch",
      "localRoot": "${workspaceFolder}/extension"
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/extension",
        "--extensionTestsPath=${workspaceFolder}/extension/out/test/suite/index"
      ],
      "outFiles": ["${workspaceFolder}/extension/out/**/*.js", "${workspaceFolder}/extension/dist/**/*.js"],
      "preLaunchTask": "npm: watch-tests",
      "localRoot": "${workspaceFolder}/extension"
    }
  ]
}

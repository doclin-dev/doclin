{
  "name": "doclin",
  "displayName": "Doclin",
  "publisher": "Doclin",
  "description": "Doclin is a modern way of commenting on codebase.",
  "icon": "media/doclinLogo.png",
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:doclin.addComment",
    "onCommand:doclin.authenticate",
    "onView:doclin.sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "doclinSidebarView",
          "title": "Doclin",
          "icon": "media/doclinLogo.svg"
        }
      ]
    },
    "views": {
      "doclinSidebarView": [
        {
          "type": "webview",
          "id": "doclin.sidebar",
          "name": "Doclin",
          "icon": "media/doclinLogo.svg",
          "contextualTitle": "Doclin"
        }
      ]
    },
    "commands": [
      {
        "command": "doclin.addComment",
        "category": "Doclin",
        "title": "Add Comment"
      },
      {
        "command": "doclin.authenticate",
        "category": "Doclin",
        "title": "Authenticate"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "doclin.addComment",
          "when": "editorTextFocus",
          "group": "doclin"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "webpack": "webpack --config ./build/node-extension.webpack.config.js",
    "webpack-watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
    "webpack-prod": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
    "rollup": "rollup -c",
    "rollup-watch": "rollup -c -w",
    "watch": "concurrently \"npm run rollup-watch\" \"npm run webpack-watch\"",
    "package": "npm run rollup && npm run webpack-prod",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint-fix": "eslint src --ext ts --fix",
    "test": "node ./out/test/runTest.js",
    "svelte-check": "svelte-check"
  },
  "devDependencies": {
    "@iconify/icons-mdi": "^1.2.47",
    "@iconify/svelte": "^3.1.4",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-typescript": "^8.1.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/bootstrap": "^5.2.10",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/polka": "^0.5.1",
    "@types/quill": "^1.3.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^5.3.0",
    "eslint": "^8.56.0",
    "glob": "^7.1.6",
    "mocha": "^10.2.0",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.31.0",
    "svelte-check": "^1.1.23",
    "svelte-preprocess": "^4.6.1",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "bootstrap": "^5.3.1",
    "highlight.js": "^11.8.0",
    "moment": "^2.30.1",
    "polka": "^0.5.2",
    "quill": "^1.3.7",
    "quill-mention": "^4.1.0"
  }
}
